<div class="movie-header">
  <h1>
    Discover
    <span><%= @movie.title %></span>
  </h1>

    <!-- Trailer Modal -->
  <div class="play-button">
    <button type="button" class="btn btn-ghost" data-toggle="modal" data-target="#trailerModal">
      Watch Trailer
    </button>
    <div class="modal fade" id="trailerModal" tabindex="-1" role="dialog" aria-labelledby="trailerModalLabel" aria-hidden="true">
      <div class="modal-dialog .modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
          <iframe
              width="800"
              height="500"
              src="<%= @movie.movie_url %>"
              title="YouTube video player"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen>
          </iframe>
        </div>
      </div>
    </div>

    <!-- Full Movie Modal -->
    <button type="button" class="btn btn-ghost" data-toggle="modal" data-target="#fullmovieModal">
      Watch Full Movie
    </button>
    <div class="modal fade" id="fullmovieModal" tabindex="-1" role="dialog" aria-labelledby="fullmovieModalLabel" aria-hidden="true">
      <div class="modal-dialog .modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
          <iframe
              width="800"
              height="500"
              src="<%= @movie.movie_url %>"
              title="YouTube video player"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen>
          </iframe>
        </div>
      </div>
    </div>
  </div>

</div>

  <div class="movie-info">
    <p>Director : <%= @movie.director %> </p>
    <p>Movie Year : <%= @movie.year %> </p>
    <p>Movie Actor : <%= @movie.actor %> </p>
    <p>Overview : <%= @movie.overview %> </p>
    <p>Synopsis : <%= @movie.synopsis %> </p>
    <p>Rating : <%= @movie.rating %> </p>
    <p>Movie Review : <%= @movie.review %> </p>
</div>
