<div class="movie-header">
  <h1>
    Discover
    <span><%= @movie.title %></span>
  </h1>

  <!-- Trailer Modal -->
  <div class="play=button">
  <button type="button" class="btn btn-ghost" data-toggle="modal" data-target="#trailerModal">
    Watch Trailer
  </button>
  <div class="modal fade" id="trailerModal" tabindex="-1" role="dialog" aria-labelledby="trailerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <iframe
            width="800"
            height="500"
            src="<%= @movie.movie_url %>"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
        </iframe>
      </div>
    </div>
  </div>

  <!-- Full Movie Modal -->
  <button type="button" class="btn btn-ghost" data-toggle="modal" data-target="#fullmovieModal">
    Watch Full Movie
  </button>
  <div class="modal fade" id="fullmovieModal" tabindex="-1" role="dialog" aria-labelledby="fullmovieModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <iframe
            width="800"
            height="500"
            src="<%= @movie.movie_url %>"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
        </iframe>
      </div>
    </div>
  </div>
  </div>

</div>


<div class="movie-info">
  <h3>Director</h3>
  <p><%= @movie.director %></p>

  <h3>Movie Year</h3>
  <p><%= @movie.year %></p>

  <h3>Movie Actor</h3>
  <p><%= @movie.actor %></p>

  <h3>Overview</h3>
  <p><%= @movie.overview %></p>

  <h3>Synopsis</h3>
  <p><%= @movie.synopsis %></p>

  <h3>Rating</h3>
  <p><%= @movie.rating %></p>

  <h3>Movie Review</h3>
  <p><%= @movie.review %></p>
</div>
